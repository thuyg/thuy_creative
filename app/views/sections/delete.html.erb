<% @page_title = "Delete Section: #{@section.name_tag}" %>

<%= link_to("<< Back to List", section_type_sections_path(:section_type_id => @section_type.id), :class => 'back-link') %>


<div class="sections delete">
  <h2>Delete Section</h2>
  
	<%= form_for(:section, :url => section_type_section_path(:id => @section.id, :section_type_id => @section_type.id), :html => {:method => :delete}) do |f| %>
	
    <p>Are you sure you want to permanently delete this section?</p>
  
    <p class="reference-name"><%= @section.name_tag %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Section") %>
    </div>
    
  <% end %>
</div>