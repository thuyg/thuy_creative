<section role="main" id="content">
	<div class="main-content-style">

<h1>Get in touch!</h1>
<p>Send us your message through the following form</p>
<div class="contact-form-block">
	<%= form_tag dispatch_email_path, method: :post do %>
		<div class="float-left column-1">
  			<p><%= label_tag "user_info[name]", "Name" %><br />
  			<%= text_field_tag "user_info[name]" %></p>

  			<p><%= label_tag "user_info[email]", "Email" %><br />
  			<%= text_field_tag "user_info[email]" %></p>
		</div><!-- /float-left -->
		
		<div class="float-left">
  			<p><%= label_tag "user_info[message_body]", "Message" %><br />
  			<%= text_area_tag "user_info[message_body]", "", rows: 7 %></p>
			<%= submit_tag "Send" %>
		</div><!-- /float-left -->
  
	<% end %>
</div><!-- /contact-form-block -->
</div><!-- /main-content-style -->	
</section>
