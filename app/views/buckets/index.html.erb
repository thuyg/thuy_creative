<% @page_title = "Buckets List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="page_types index">
  <h2>Listing buckets</h2>

<%= link_to 'New Bucket', new_bucket_path, :class => 'action new' %>

<table class="listing buckets">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @buckets.each do |bucket| %>
      <tr>
        <td><%= bucket.name %></td>
        <td><%= link_to 'Show', bucket, :class => 'action show' %></td>
        <td><%= link_to 'Edit', edit_bucket_path(bucket), :class => 'action edit' %></td>
        <td><%= link_to 'Destroy', bucket, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'action destroy' %></td>
		<td><%= link_to "Download file", bucket.attachment_url, :class => 'action download' %></td>
      </tr>

	 <!-- <tr>
		<td colspan="5"><%= image_tag bucket.attachment_url.to_s %></td>
	</tr> -->
	
    <% end %>
  </tbody>
</table>

</div>
