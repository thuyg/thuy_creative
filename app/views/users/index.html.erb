<% @page_title = "Users List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="user index">
  <h2>Users</h2>
  
  <%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %>
  <div><%= pluralize(@users.size, 'user')%> found</div>

  <table class="listing" summary="users list">
    <tr class="header">
	  <th>Name</th>
	  <th>Email</th>
	  <th>Username</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr class="<%= cycle('odd', 'even') %>">
	  <td class="center"><%= user.name %></td>
      <td class="center"><%= mail_to(user.email) %></td>
	  <td class="center"><%= user.username %></td>
      <td class="actions">			
      	<%= link_to('Edit', {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to('Delete', {:action => 'delete', :id => user.id}, :class => 'action delete') %>
      
      </td>
    </tr>
    <% end %>
  </table>
</div>
