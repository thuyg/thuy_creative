<% @page_title = "Delete Page Type: #{@page_type.name_tag}" %>

<%= link_to("<< Back to List", page_types_path, :class => 'back-link') %>


<div class="page-types delete">
  <h2>Delete Page Type</h2>
  
	<%= form_for(:page_type, :url => page_type_path(:id => @page_type.id), :html => {:method => :delete}) do |f| %>
	
    <p>Are you sure you want to permanently delete this page type?</p>
  
    <p class="reference-name"><%= @page_type.name_tag %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Page Type") %>
    </div>
    
  <% end %>
</div>
